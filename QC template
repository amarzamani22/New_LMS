ROLLUP_ORDER = [
    "All Financial Institutions","Banking Institutions","Commercial Banks","Investment Banks",
    "Islamic Banks","Foreign Banks","Digital Banks","International Islamic Banks","DFI","Insurers","Takaful Operators",
]

